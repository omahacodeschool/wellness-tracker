<h1>Listing metrics</h1>

<table>
  <tr>
    <th>User</th>
    <th>Energy</th>
    <th>Happiness</th>
    <th>Productivity</th>
    <th>Fulfillment</th>
    <th>Day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.user_id %></td>
    <td><%= metric.energy %></td>
    <td><%= metric.happiness %></td>
    <td><%= metric.productivity %></td>
    <td><%= metric.fulfillment %></td>
    <td><%= metric.day %></td>
    <td><%= link_to 'Show', metric %></td>
    <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
    <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

