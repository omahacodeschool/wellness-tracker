<% if @user.metrics.today? == [] %>
  <%= link_to "Score today's wellness!", score_path, class: 'main-link' %>
<% else %>
    <div id="chart"> </div>

    <%= render 'chart' %>
<% end %>

<% if @events != [] %>
  <h3>Life Events This Week</h3>
  <% @events.each do |e| %>
    <p><%= e.prettydate %> - <%= e.content %></p>
  <% end %>
<% end %>

<p><%= link_to 'Add Life Event', event_path, class: 'main-link' %></p>